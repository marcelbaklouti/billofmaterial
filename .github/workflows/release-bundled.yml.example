# Alternative: Bundled CLI (no sbom-core published)
# This bundles sbom-core into the CLI package
# To use: rename to release.yml

name: Release (Bundled)

on:
  push:
    branches:
      - main
    paths:
      - "packages/**"
      - ".github/workflows/release.yml"
  workflow_dispatch:

jobs:
  release:
    runs-on: ubuntu-latest
    permissions:
      contents: write
      packages: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Install pnpm
        uses: pnpm/action-setup@v3
        with:
          version: 10.4.1

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: "20"
          cache: "pnpm"

      - name: Install dependencies
        run: pnpm install --frozen-lockfile

      - name: Build all packages
        run: pnpm build

      - name: Get CLI package version
        id: get_version
        run: |
          VERSION=$(node -p "require('./packages/cli/package.json').version")
          echo "version=$VERSION" >> $GITHUB_OUTPUT
          echo "CLI Version: $VERSION"

      - name: Check if version tag exists
        id: check_tag
        run: |
          if git rev-parse "v${{ steps.get_version.outputs.version }}" >/dev/null 2>&1; then
            echo "exists=true" >> $GITHUB_OUTPUT
            echo "Tag v${{ steps.get_version.outputs.version }} already exists"
          else
            echo "exists=false" >> $GITHUB_OUTPUT
            echo "Tag v${{ steps.get_version.outputs.version }} does not exist"
          fi

      - name: Bundle sbom-core into CLI
        if: steps.check_tag.outputs.exists == 'false'
        run: |
          cd packages/cli
          
          # Install esbuild for bundling
          npm install --no-save esbuild
          
          # Bundle the CLI with sbom-core inlined
          npx esbuild src/cli.ts \
            --bundle \
            --platform=node \
            --target=node20 \
            --format=esm \
            --outfile=dist/cli-bundled.js \
            --banner:js="#!/usr/bin/env node" \
            --external:commander \
            --external:ora \
            --external:chalk \
            --external:yaml \
            --external:cheerio
          
          # Replace the original cli.js with bundled version
          mv dist/cli-bundled.js dist/cli.js
          chmod +x dist/cli.js
          
          # Update package.json to remove workspace dependency and add core's deps
          node -e "
            const pkg = require('./package.json');
            const corePkg = require('../sbom-core/package.json');
            
            // Remove workspace dependency
            delete pkg.dependencies['@billofmaterial/sbom-core'];
            
            // Add sbom-core's dependencies
            Object.assign(pkg.dependencies, corePkg.dependencies);
            
            // Update files to only include dist
            pkg.files = ['dist', 'README.md'];
            
            require('fs').writeFileSync('package.json', JSON.stringify(pkg, null, 2));
          "
          
          echo "‚úÖ Bundled sbom-core into CLI"
          echo "Package contents:"
          ls -lah dist/

      - name: Publish billofmaterial CLI
        if: steps.check_tag.outputs.exists == 'false'
        working-directory: packages/cli
        run: |
          echo "//registry.npmjs.org/:_authToken=${NPM_TOKEN}" > ~/.npmrc
          npm publish --access public
          echo "‚úÖ Published billofmaterial CLI (bundled)"
        env:
          NPM_TOKEN: ${{ secrets.NPM_TOKEN }}

      - name: Generate Release Notes
        if: steps.check_tag.outputs.exists == 'false'
        id: release_notes
        run: |
          LAST_TAG=$(git describe --tags --abbrev=0 2>/dev/null || echo "")
          if [ -z "$LAST_TAG" ]; then
            RELEASE_NOTES=$(git log --pretty=format:"- %s (%h)" | head -20)
          else
            RELEASE_NOTES=$(git log ${LAST_TAG}..HEAD --pretty=format:"- %s (%h)")
          fi
          echo "notes<<EOF" >> $GITHUB_OUTPUT
          echo "$RELEASE_NOTES" >> $GITHUB_OUTPUT
          echo "EOF" >> $GITHUB_OUTPUT

      - name: Create GitHub Release
        if: steps.check_tag.outputs.exists == 'false'
        run: |
          gh release create "v${{ steps.get_version.outputs.version }}" \
            --title "Release v${{ steps.get_version.outputs.version }}" \
            --notes "${{ steps.release_notes.outputs.notes }}" \
            --latest
        env:
          GH_TOKEN: ${{ github.token }}

      - name: Publish Summary
        if: steps.check_tag.outputs.exists == 'false'
        run: |
          echo "## üöÄ Release v${{ steps.get_version.outputs.version }}" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "### üì¶ Published Package (Bundled)" >> $GITHUB_STEP_SUMMARY
          echo "- [billofmaterial](https://www.npmjs.com/package/billofmaterial) (includes bundled sbom-core)" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "### üß™ Test the CLI" >> $GITHUB_STEP_SUMMARY
          echo '```bash' >> $GITHUB_STEP_SUMMARY
          echo "npx billofmaterial@latest generate" >> $GITHUB_STEP_SUMMARY
          echo '```' >> $GITHUB_STEP_SUMMARY

      - name: Skip release (tag exists)
        if: steps.check_tag.outputs.exists == 'true'
        run: |
          echo "‚è≠Ô∏è Skipping release - version v${{ steps.get_version.outputs.version }} already published"

